doctype html
html
  head
    meta(charset='utf-8')      
    title SimpleCalc
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h1 Basic Calculator

    #container
        #display 0
        #buttons
          .row
            button#ac C
            button.operator &div;
          .row
            button.number 7
            button.number 8
            button.number 9
            button.operator &times
          .row
            button.number 4
            button.number 5
            button.number 6
            button.operator -
          .row
            button.number 1
            button.number 2
            button.number 3
            button.operator +
          .row
            button#0.number 0
            button#decimal .
            button#equal =
            

    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
